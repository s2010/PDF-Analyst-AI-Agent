# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Model Configuration
OPENAI_MODEL=gpt-3.5-turbo

# Text Processing Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_RESULTS=5
MAX_CONTEXT_LENGTH=4000

# Security Configuration
